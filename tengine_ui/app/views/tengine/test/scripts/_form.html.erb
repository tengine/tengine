<%= form_for(@script, as:"script") do |f| %>
  <% if @script.errors.any? %>
    <div id="error_explanation">
      <h2><%= I18n.t('activerecord.errors.template.header', :count => @script.errors.size, :model => @script.class.human_name) %></h2>

      <ul>
      <% @script.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag :from_index, "true" if @from_index  %>

  <div class="field">
    <%= f.label :kind %><br />
    <%= f.select :kind %>
  </div>
  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_area :code, :cols => 80, :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :options_yaml %><br />
    <%= f.text_area :options_yaml, :cols => 80, :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :timeout %><br />
    <%= f.number_field :timeout %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
