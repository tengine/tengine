<h1><%= page_title Tengine::Job::Edge, :list %></h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th><%= Tengine::Job::Edge.human_attribute_name(:phase_cd) %></th>
    <th><%= Tengine::Job::Edge.human_attribute_name(:origin_id) %></th>
    <th><%= Tengine::Job::Edge.human_attribute_name(:destination_id) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @edges.each do |edge| %>
  <tr class="<%= cycle("even", "odd") %>" >
    <td><%= edge.phase_cd %></td>
    <td><%= edge.origin_id %></td>
    <td><%= edge.destination_id %></td>
    <td><%= link_to_show edge %></td>
    <td><%= link_to_edit edit_tengine_job_edge_path(edge) %></td>
    <td><%= link_to_destroy edge, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= paginate @edges %>

