/* @group nav */
/*
----------------------------------------------------------------------------- 
[4-2] nav
----------------------------------------------------------------------------- */
#nav {
}

#nav ul {
  border-bottom: 1px solid #999;
}

#nav ul li {
  display: block;
  margin-right: 1px;
  border-top: 1px solid #999;
  background: url(<%=asset_path 'bg_check1.png' %>);
}
#nav > ul > li:first-child {
  border-top: none;
}

#nav > ul > li > a {
  display: block;
  font-weight: bold;
  color: #333;;
  text-decoration: none;
  background: url(<%=asset_path 'icon/Briefcase.png' %>) no-repeat 10px 0.75em;
}
#nav > ul > li > a span {
  display: block;
  padding: 10px 10px 10px 30px
}
#nav > ul > li > a:hover span {
  color: #000;
  background: #eee url(<%=asset_path 'icon/Briefcase.png' %>) no-repeat 10px 0.75em;
}


#nav ul li ul {
  border-bottom: 0;
}
#nav ul li ul li {
  margin-right: 0;
  border-top: 1px dotted #999;
}
#nav ul li ul li a {
  display: block;
  padding: 8px 8px 8px 10px;
  text-decoration: none;
  color: #333;
  background: #fff url(<%=asset_path 'arrow1.png' %>) no-repeat 208px center;
}
#nav ul li ul li a:hover {
  display: block;
  padding: 8px 8px 8px 10px;
  color: #000;
  text-decoration: none;
  background: #eee url(<%=asset_path 'arrow1.png' %>) no-repeat 210px center;
}


/* Current */
#nav > ul > li.Current {
  background: url(<%=asset_path 'bg_check2.png' %>) repeat;
}
#nav > ul > li.Current > a {
  margin-right: -1px;
  color: #fff;
  font-weight: bold;
  background: url(<%=asset_path 'icon/Briefcase.png' %>) no-repeat 10px 0.75em;
}
#nav > ul > li.Current > a span,
#nav > ul > li.Current > a:hover span {
  color: #fff;
  background: url(<%=asset_path 'arrow2.png' %>) no-repeat right center;
}

#nav ul li ul li.Current {
  margin-right: -1px;
  background: url(<%=asset_path 'bg_check2.png' %>) repeat;
}
#nav ul li ul li.Current a {
  color: #fff;
  font-weight: bold;
  background: url(<%=asset_path 'arrow2.png' %>) no-repeat right center;
}
