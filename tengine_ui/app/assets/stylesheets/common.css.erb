/* @group .BreadCrumbs */
.BreadCrumbs {
  line-height: 1;
  padding-bottom: 10px;
  color:#666;
  font-size: 0.88em;
}
.BreadCrumbs strong {
  font-weight: normal;
}

.BreadCrumbs dl {
  display: block;
}
.BreadCrumbs dl:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
* html .BreadCrumbs dl             { zoom: 1; } /* IE6 */
*:first-child+html .BreadCrumbs dl { zoom: 1; } /* IE7 */

.BreadCrumbs dt {
    display: none;
}
.BreadCrumbs dd {
    float: left;
    padding-right: 8px;
}

.BreadCrumbs dd ol {
    overflow: hidden;
}

.BreadCrumbs dd ol li {
    display: inline;
    padding-left: 0px;
    padding-right: 5px;
}

.BreadCrumbs dd ol li.Last {
    padding-right: 0;
    background: none;
}

.BreadCrumbs dd ol li.Home {
    
}
.BreadCrumbs dd ol li a {
  padding-right: 16px;
  background: url(<%=asset_path "topicpath.gif" %>) no-repeat right center;
}

