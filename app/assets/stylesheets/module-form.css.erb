/* @group .Msg */
.Msg {
  margin-bottom: 1em;
  font-weight: bold;
}
  .Msg p{
    margin-bottom: 0 !important;
  }
  
.MsgWarning{
  padding: 10px 30px;
  background: #fefbdc url(<%= asset_path 'icon/Warning.png' %>) no-repeat 10px 11px;
  border: 5px solid #f6e019;
}
  
.MsgComplete{
  padding: 10px 30px;
  background: #C9EEFE url(<%= asset_path 'icon/Ok.png' %>) no-repeat 10px 11px;
  color: #000;
}

.MsgCompleteDelete{
  padding: 10px 30px;
  background: #fbf0a3 url(<%= asset_path 'icon/Delete.png' %>) no-repeat 10px 11px;
  color: #000;
}

.MsgError {
  padding: 10px 30px;
  background: url(<%= asset_path 'icon/Error.png' %>) no-repeat 10px 10px;
  color: red;
  font-weight: bold;
  border: 4px solid #f00;
}
.MsgError ul {
  margin-top: 10px;
  margin-left: 15px;
}
.MsgError ul li {
  padding-left: 20px;
  margin-bottom: 5px;
  list-style: none;
  font-weight: normal;
  color: #333;
  background: url(<%= asset_path 'icon/Red_mark.png' %>) no-repeat left 1px;
}
/* @end */

/* @group INPUT TEXT */
.InputText,
.InputError{
  box-sizing: border-box;
  margin-bottom: 4px;
  padding: 3px 20px 3px 5px;
  width: 200px;
  font-size: 1.2em;
  border: 1px solid #ccc;
  background-color: #EDEDED;
}

.InputText{
  
}
.InputText:hover,
.InputText:focus{
  background-color: #fdfcdd;
  border-color: #aa9;
}

/* エラー時、エラー項目のinputの右上に表示 */
.InputError{
  box-sizing: border-box;
  padding-right: 20px;
  border: 1px solid #f00;
  background: #FFDDDD url(<%= asset_path 'icon/Red_mark.png' %>) no-repeat 98% 5px;
}
.WrapInputError {
  padding: 0 0 5px 0;
  background: #FFDDDD url(<%= asset_path 'icon/Red_mark.png' %>) no-repeat 98% 5px;
}


