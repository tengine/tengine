}
col.RowSort{
  width: 70px;
}
col.RowAction{
  width: 150px;
}
col.RowW80  { width: 80px; }
col.RowW100  { width: 100px; }
col.RowW150  { width: 150px; }
col.RowW200  { width: 200px; }

/* @end */
