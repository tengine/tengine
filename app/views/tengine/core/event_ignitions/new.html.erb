<h1><%= page_title Tengine::Event, :new %></h1>

<p id="notice"><%= notice %></p>

<%= form_for(@event, as:"event", url: {:action => 'fire'} ) do |f| %>

  <div class="field">
    <%= f.label :event_type_name %><br />
    <%= f.text_field :event_type_name %>
  </div>
  <div class="field">
    <%= f.label :key %><br />
    <%= f.text_field :key %>
  </div>
  <div class="field">
    <%= f.label :source_name %><br />
    <%= f.text_field :source_name %>
  </div>
  <div class="field">
    <%= f.label :occurred_at %><br />
    <%= f.text_field :occurred_at %>
  </div>
  <div class="field">
    <%= f.label :level %><br />
    <%= radio_button_tag "event[level]", 1 %> debug
    <%= radio_button_tag "event[level]", 2 %> info
    <%= radio_button_tag "event[level]", 3 %> warn
    <%= radio_button_tag "event[level]", 4 %> error
    <%= radio_button_tag "event[level]", 5 %> fatal
  </div>
  <div class="field">
    <%= f.label :sender_name %><br />
    <%= f.text_field :sender_name %>
  </div>
  <div class="field">
    <%= f.label :properties %><br />
    <%= f.text_area :properties %>
  </div>
  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>

