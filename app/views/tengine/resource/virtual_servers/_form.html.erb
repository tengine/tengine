  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :addresses_yaml %><br />
    <%= f.text_area :addresses_yaml %>
  </div>
  <div class="field">
    <%= f.label :properties_yaml %><br />
    <%= f.text_area :properties_yaml %>
  </div>
  <div class="field">
    <%= f.label :provided_image_id %><br />
    <%= f.text_field :provided_image_id %>
  </div>
  <div class="field">
    <%= f.label :provided_type_id %><br />
