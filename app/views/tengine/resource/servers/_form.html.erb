<%= form_for(@server, as:"server") do |f| %>
  <% if @server.errors.any? %>
    <div id="error_explanation">
      <h2><%= I18n.t('activerecord.errors.template.header', :count => @server.errors.size, :model => @server.class.human_name) %></h2>

      <ul>
      <% @server.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= Tengine::Resource::Server.human_attribute_name(:provider) %>:<br/>
    <%= @server.provider.name %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

<% if @server.respond_to?(:host_server_id) -%>
  <div class="field">
    <%= f.label :host_server_id %><br />
    <%= f.text_field :host_server_id %>
  </div>
<% end -%>

  <div class="field">
    <%= f.label :provided_id %><br />
    <%= f.text_field :provided_id %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :addresses_yaml %><br />
    <%= f.text_area :addresses_yaml %>
  </div>
  <div class="field">
    <%= f.label :properties_yaml %><br />
    <%= f.text_area :properties_yaml %>
  </div>
<% if @server.respond_to?(:provided_image_id) -%>
  <div class="field">
    <%= f.label :provided_image_id %><br />
    <%= f.text_field :provided_image_id %>
  </div>
<% end -%>
<% if @server.respond_to?(:provided_type_id) -%>
  <div class="field">
    <%= f.label :provided_type_id %><br />
    <%= f.text_field :provided_type_id %>
  </div>
<% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
