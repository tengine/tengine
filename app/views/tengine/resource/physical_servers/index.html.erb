<h1><%= page_title Tengine::Resource::PhysicalServer, :list %></h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th><%= Tengine::Resource::PhysicalServer.human_attribute_name(:provider) %></th>
    <th><%= Tengine::Resource::PhysicalServer.human_attribute_name(:name) %></th>
    <th><%= Tengine::Resource::PhysicalServer.human_attribute_name(:provided_id) %></th>
    <th><%= Tengine::Resource::PhysicalServer.human_attribute_name(:description) %></th>
    <th><%= Tengine::Resource::PhysicalServer.human_attribute_name(:status) %></th>
    <th><%= Tengine::Resource::PhysicalServer.human_attribute_name(:addresses) %></th>
    <th><%= Tengine::Resource::PhysicalServer.human_attribute_name(:properties) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @physical_servers.each do |physical_server| %>
  <tr class="<%= cycle("even", "odd") %>" >
    <td><%= (physical_server.respond_to?(:provider) && physical_server.provider) ? physical_server.provider.name : "<No provider found>" %></td>
    <td><%= physical_server.name %></td>
    <td><%= physical_server.provided_id %></td>
    <td><%= physical_server.description %></td>
    <td><%= physical_server.status %></td>
    <td><pre><%= physical_server.addresses_yaml %></pre></td>
    <td><pre><%= physical_server.properties_yaml %></pre></td>
    <td><%= link_to_show physical_server %></td>
    <td><%= link_to_edit edit_tengine_resource_physical_server_path(physical_server) %></td>
    <td><%= link_to_destroy physical_server, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= paginate @physical_servers %>

