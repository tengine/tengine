        <span id = "hidden_key_key"><%=v.label t(:private_keys) %></span>
        <span id = "hidden_key_value"><%= v.text_area :private_keys, value: values["private_keys"], class: "InputText"  %></span>
        <span id = "hidden_passphrase_key"><%=v.label t(:passphrase) %></span>
        <span id = "hidden_passphrase_value"><%= v.password_field :passphrase, value: values["passphrase"], class: "InputText" %></span>
      <!--  -->
    <%end%>
  <%end%>
</div>
