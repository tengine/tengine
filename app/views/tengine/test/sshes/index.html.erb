<h1><%= page_title Tengine::Test::Ssh, :list %></h1>

<% content_for :end_of_head do -%>
<style>
pre {
  max-height:20em;
  max-width: 60em;
  overflow-x:auto;
  overflow-y:auto;
}
</style>
<% end -%>

<p id="notice"><%= notice %></p>

<% @from_index = true -%>
<%= render 'form' %>


<table>
  <tr>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:exec_type) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:host) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:user) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:options) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:timeout) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:command) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:message) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:stdout) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:stderr) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sshes.each do |ssh| %>
  <tr class="<%= cycle("even", "odd") %>" >
    <td><%= ssh.exec_type %></td>
    <td><%= ssh.host %></td>
    <td><%= ssh.user %></td>
    <td><pre><%= ssh.options_yaml %></pre></td>
    <td><%= ssh.exec_type %></td>
    <td><pre><%= ssh.command %></pre></td>
    <td><pre><%= ssh.error_message %></pre></td>
    <td><pre><%= ssh.stdout %></pre></td>
    <td><pre><%= ssh.stderr %></pre></td>
    <td><%= link_to_show ssh %></td>
    <td><%= link_to_edit edit_tengine_test_ssh_path(ssh) %></td>
    <td><%= link_to_destroy ssh, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= paginate @sshes %>

<br />

<%= link_to_new Tengine::Test::Ssh, new_tengine_test_ssh_path %>
