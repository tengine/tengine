<h1><%= page_title Tengine::Test::Ssh, :list %></h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:host) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:local) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:user) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:options) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:timeout) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:command) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:stdout) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:stderr) %></th>
    <th><%= Tengine::Test::Ssh.human_attribute_name(:error_message) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sshes.each do |ssh| %>
  <tr class="<%= cycle("even", "odd") %>" >
    <td><%= ssh.host %></td>
    <td><%= ssh.local %></td>
    <td><%= ssh.user %></td>
    <td><pre style="max-height:20em; overflow-y:auto;"><%= ssh.options_yaml %></pre></td>
    <td><%= ssh.timeout %></td>
    <td><pre style="max-height:20em; overflow-y:auto;"><%= ssh.command %></pre></td>
    <td><pre style="max-height:20em; overflow-y:auto;"><%= ssh.stdout %></pre></td>
    <td><pre style="max-height:20em; overflow-y:auto;"><%= ssh.stderr %></pre></td>
    <td><pre style="max-height:20em; overflow-y:auto;"><%= ssh.error_message %></pre></td>
    <td><%= link_to_show ssh %></td>
    <td><%= link_to_edit edit_tengine_test_ssh_path(ssh) %></td>
    <td><%= link_to_destroy ssh, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= paginate @sshes %>

<br />

