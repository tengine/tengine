<h1><%= page_title Tengine::Job::Expansion, :list %></h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th><%= Tengine::Job::Expansion.human_attribute_name(:name) %></th>
    <th><%= Tengine::Job::Expansion.human_attribute_name(:server_name) %></th>
    <th><%= Tengine::Job::Expansion.human_attribute_name(:credential_name) %></th>
    <th><%= Tengine::Job::Expansion.human_attribute_name(:killing_signals) %></th>
    <th><%= Tengine::Job::Expansion.human_attribute_name(:killing_signal_interval) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @expansions.each do |expansion| %>
  <tr class="<%= cycle("even", "odd") %>" >
    <td><%= expansion.name %></td>
    <td><%= expansion.server_name %></td>
    <td><%= expansion.credential_name %></td>
    <td><%= expansion.killing_signals_text %></td>
    <td><%= expansion.killing_signal_interval %></td>
    <td><%= link_to_show expansion %></td>
    <td><%= link_to_edit edit_tengine_job_expansion_path(expansion) %></td>
    <td><%= link_to_destroy expansion, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= paginate @expansions %>

<br />

<%= link_to_new Tengine::Job::Expansion, new_tengine_job_expansion_path %>
