<h1><%= page_title Tengine::Job::Script, :list %></h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th><%= Tengine::Job::Script.human_attribute_name(:name) %></th>
    <th><%= Tengine::Job::Script.human_attribute_name(:server_name) %></th>
    <th><%= Tengine::Job::Script.human_attribute_name(:credential_name) %></th>
    <th><%= Tengine::Job::Script.human_attribute_name(:killing_signals) %></th>
    <th><%= Tengine::Job::Script.human_attribute_name(:killing_signal_interval) %></th>
    <th><%= Tengine::Job::Script.human_attribute_name(:description) %></th>
    <th><%= Tengine::Job::Script.human_attribute_name(:script) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scripts.each do |script| %>
  <tr class="<%= cycle("even", "odd") %>" >
    <td><%= script.name %></td>
    <td><%= script.server_name %></td>
    <td><%= script.credential_name %></td>
    <td><%= script.killing_signals_text %></td>
    <td><%= script.killing_signal_interval %></td>
    <td><%= script.description %></td>
    <td><%= script.script %></td>
    <td><%= link_to_show script %></td>
    <td><%= link_to_edit edit_tengine_job_script_path(script) %></td>
    <td><%= link_to_destroy script, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= paginate @scripts %>

<br />

