language: ruby
script: 'ci/travis.rb'
before_install:
  - clear
  - gem install bundler
bundler_args: "--path vendor/bundle"
services:
  - rabbitmq
  - mongodb
rvm:
#  - 1.9.2
  - 1.9.3
  - 2.0.0
#  - ruby-head
#  - jruby-19mode
env:
  - "GEM=tengine_support"
  - "GEM=tengine_event"
  - "GEM=tengine_core"
  - "GEM=tengine_resource"
  - "GEM=tengine_resource_ec2"
  - "GEM=tengine_resource_wakame"
  - "GEM=tengine_job"
  - "GEM=tengine_job_agent"
  - "GEM=tengine_ui"
gemfile:
#  - gemfiles/Gemfile.activesupport-3.0.10
  - gemfiles/Gemfile.activesupport-3.1
  - gemfiles/Gemfile.activesupport-3.2
matrix:
  exclude:
<%
   # 3.0.xは tengine_event, tengine_job_agentのみ
   # tengine_supportはテスト環境で activemodel ~> 3.1 という依存があるのでひとまず除外。
%>
<% ['1.9.2', '1.9.3'].each do |ruuby_version| %>#
    - rvm: <%= ruuby_version %>
      gemfile: gemfiles/Gemfile.activesupport-3.0
      env: "GEM=tengine_support"
    - rvm: <%= ruuby_version %>
      gemfile: gemfiles/Gemfile.activesupport-3.0
      env: "GEM=tengine_core"
    - rvm: <%= ruuby_version %>
      gemfile: gemfiles/Gemfile.activesupport-3.0
      env: "GEM=tengine_resource"
    - rvm: <%= ruuby_version %>
      gemfile: gemfiles/Gemfile.activesupport-3.0
      env: "GEM=tengine_job"
    - rvm: <%= ruuby_version %>
      gemfile: gemfiles/Gemfile.activesupport-3.0
      env: "GEM=tengine_ui"
<% end %>
